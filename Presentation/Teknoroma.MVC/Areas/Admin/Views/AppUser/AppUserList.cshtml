@using Teknoroma.Application.Features.AppUsers.Models
@model List<AppUserViewModel>
@{
	ViewData["Title"] = "Kullanıcı Listesi - Teknoroma";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
	<div class="col-md-12 mx-auto">
		<div class="card">
			<div class="card-header bg-info">
				<h2 class="text-white">Kullanıcı Listesi</h2>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12">
						<table id="datatable-buttons" width="100%" class="table table-striped nowrap no-footer dtr-inline collapsed" role="grid" aria-describedby="basic-datatable_info">

							<thead>
								<tr>
									<th rowspan="1" colspan="1">Kullanıcı Adı</th>
									<th rowspan="1" colspan="1">Email</th>
									<th rowspan="1" colspan="1">Ad</th>
									<th rowspan="1" colspan="1">Soyad</th>
									<th rowspan="1" colspan="1">Telefon Numarası</th>
									<th rowspan="1" colspan="1">Kimlik Numarası</th>
									<th rowspan="1" colspan="1">Adres</th>
									<th>

									</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>
											@item.UserName
										</td>
										<td>
											@item.Email
										</td>
										<td>
											@item.FirstName
										</td>
										<td>
											@item.LastName
										</td>
										<td>
											@item.PhoneNumber
										</td>
										<td>
											@item.NationalityNumber
										</td>
										<td>
											@item.Address
										</td>
										<td>
											@if(User.IsInRole("Kullanıcı Detayları"))
											{
												<div>
													<a class="btn btn-sm btn-info waves-effect waves-light" asp-controller="AppUser" asp-action="Detail" asp-route-id="@item.ID">Detaylar</a>
												</div>
											}
											@if(User.IsInRole("Kullanıcı Güncelle"))
											{
												<div>
													<a class="btn  btn-sm btn-warning waves-effect waves-light" asp-controller="AppUser" asp-action="Update" asp-route-id="@item.ID">Güncelle</a>
												</div>
											}
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	window.onload = function () {
		initializeDataTable('datatable-buttons', 0, 'asc', [0,1,2,3,4,5,6], "Kullanıcı Listesi");
	};
</script>
