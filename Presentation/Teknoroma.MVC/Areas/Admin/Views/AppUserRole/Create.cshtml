@using Teknoroma.Application.Features.AppUserRoles.Models
@model CreateAppUserRoleViewModel
@{
    ViewData["Title"] = "Yetki Oluştur - Teknoroma";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card">
            <div class="card-header bg-info">
                <h2 class="text-white">Yetki Ekle</h2>
            </div>
            </div>
            <form method="post">
                <div class="card-body">
                    <div asp-validation-summary="All">
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                </div>
                <div class="card-footer">
                <button type="submit" class="btn btn-success btn-block waves-effect waves-light">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
