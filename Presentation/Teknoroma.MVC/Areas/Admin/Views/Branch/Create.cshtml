@using Teknoroma.Application.Features.Branches.Models
@model CreateBranchViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mx-4">
    <div class="col-md-12 mx-auto">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Şube Ekle</h3>
            </div>  
            <div class="row">
                <div class="col-md-12 mx-auto">
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div asp-validation-summary="All">
                            </div>
                            <div class="form-group">
                                <label asp-for="BranchName"></label>
                                <input type="text" class="form-control" asp-for="BranchName">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input type="number" class="form-control" asp-for="PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <textarea class="form-control" cols="4" rows="3" asp-for="Address"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea class="form-control" cols="4" rows="3" asp-for="Description"></textarea>
                            </div>    
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-block bg-gradient-primary">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


