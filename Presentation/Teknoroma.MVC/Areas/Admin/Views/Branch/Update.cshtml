@using Teknoroma.Application.Features.Branches.Models
@model BranchViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mx-4">
    <div class="col-md-12 mx-auto">
        <div class="card card-primary">
            <div class="card-header">
                <div class="form-group">
                    <label>Şube Seçiniz</label>
                    <select class="form-control"  onchange="redirectToSelectedPage(this)">
                        @foreach (var branch in ViewBag.BranchList)
                        {
                            @if (Model == null)
                            {
                                <option value="@branch.ID" href="@branch.ID">@branch.BranchName</option>
                            }
                            else if (branch.ID == Model.ID)
                            {
                                <option value="@branch.ID" selected>@branch.BranchName</option>
                            }
                            else
                            {
                                <option value="@branch.ID" href="@branch.ID">@branch.BranchName</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mx-auto">
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div asp-validation-summary="All">
                            </div>
                            <div class="form-group">
                                <label asp-for="ID"></label>
                                <input type="text" class="form-control" asp-for="@Model.ID" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="BranchName"></label>
                                <input type="text" class="form-control" asp-for="@Model.BranchName">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input type="text" class="form-control" asp-for="@Model.PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <textarea class="form-control" cols="4" rows="3" asp-for="@Model.Address"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea class="form-control" cols="4" rows="3" asp-for="@Model.Description"></textarea>
                            </div>

                            @if (Model != null && Model.IsActive == true)
                            {
                                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                    <label class="btn bg-olive active">
                                        <input type="radio" name="IsActive" id="option_b1" autocomplete="off" checked="" value="true">
                                        Aktif
                                    </label>
                                    <label class="btn bg-olive">
                                        <input type="radio" name="IsActive" id="option_b2" autocomplete="off" value="false">
                                        Pasif
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                    <label class="btn bg-olive active">
                                        <input type="radio" name="IsActive" id="option_b1" autocomplete="off">
                                        Aktif
                                    </label>
                                    <label class="btn bg-olive">
                                        <input type="radio" name="IsActive" id="option_b2" autocomplete="off" value="false" checked="" value="true">
                                        Pasif
                                    </label>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-block bg-gradient-warning">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function redirectToSelectedPage(selectElement) {
        // Seçili değeri al
        var selectedValue = selectElement.value;

        // Yönlendirme yapmak istediğiniz URL'yi oluşturun
        var redirectUrl = '/Admin/Branch/Update/' + selectedValue;

        // Yönlendirme işlemi
        window.location.href = redirectUrl;
    }
</script>
