
@model CreateCategoryViewModel
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mx-4">
    <div class="col-md-6 mx-auto">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Kategori Ekle</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div asp-validation-summary="All">   
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description" rows="3" cols="4"></textarea>
                    </div>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn bg-olive active">
                            <input type="radio" name="IsActive" id="option_b1" autocomplete="off" checked="" value="true">
                            Aktif
                        </label>
                        <label class="btn bg-olive">
                            <input type="radio" name="IsActive" id="option_b2" autocomplete="off" value="false">
                            Pasif
                        </label>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-block bg-gradient-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>