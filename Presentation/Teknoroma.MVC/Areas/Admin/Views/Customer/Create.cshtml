@using Teknoroma.Application.Features.Customers.Models

@model CreateCustomerViewModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mx-4">
	<div class="col-md-12 mx-auto">
		<div class="card card-primary">
			<div class="card-header">
				<h3 class="card-title">Müşteri Oluştur</h3>
			</div>
			<div class="row">
				<div class="col-md-12 mx-auto">
					<form method="post" enctype="multipart/form-data">
						<div class="card-body">
							<div asp-validation-summary="All">
							</div>
							<div class="form-group">
								<label asp-for="Invoice"></label>
								<div class="form-group">
									<div class="form-check">
										<input class="form-check-input" type="radio" value="Person" name="Invoice" checked="">
										<label class="form-check-label">Bireysel</label>
									</div>
									<div class="form-check">
										<input class="form-check-input" type="radio" value="Company" name="Invoice">
										<label class="form-check-label">Kurumsal</label>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label asp-for="FullName"></label>
								<input type="text" class="form-control" asp-for="FullName">
							</div>
							<div class="form-group">
								<label asp-for="ContactName"></label>
								<input type="text" class="form-control" asp-for="ContactName">
							</div>
							<div class="form-group">
								<label asp-for="ContactTitle"></label>
								<input type="text" class="form-control" asp-for="ContactTitle">
							</div>
							<div class="form-group">
								<label asp-for="PhoneNumber"></label>
								<input type="number" class="form-control" asp-for="PhoneNumber">
							</div>
							<div class="form-group">
								<label asp-for="Address"></label>
								<textarea class="form-control" rows="3" cols="4" asp-for="Address"></textarea>
							</div>
						</div>

						<div class="card-footer">
							<button type="submit" class="btn btn-block bg-gradient-primary">Ekle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
