@using Teknoroma.Application.Features.Departments.Models
@model CreateDepartmentViewModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12 mx-auto">
		<div class="card">
			<div class="card-header bg-info">
				<h2 class="text-white">Departman Ekle</h2>
			</div>
			<div class="row">
				<div class="col-md-12 mx-auto">
					<form method="post" enctype="multipart/form-data">
						<div class="card-body">
							<div asp-validation-summary="All">
							</div>
							<div class="form-group">
								<label asp-for="DepartmentName"></label>
								<input type="text" class="form-control" asp-for="DepartmentName">
							</div>
							<div class="form-group">
								<label asp-for="Description"></label>
								<textarea class="form-control" cols="4" rows="3" asp-for="Description"></textarea>
							</div>
						</div>
						<div class="card-footer">
							<button type="submit" class="btn btn-success btn-block waves-effect waves-light">Ekle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


