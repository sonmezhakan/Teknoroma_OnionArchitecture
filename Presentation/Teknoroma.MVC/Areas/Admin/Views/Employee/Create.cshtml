@using Teknoroma.Application.Features.Employees.Models
@model CreateEmployeeViewModel
@{
	ViewData["Title"] = "Çalışan Oluştur - Teknoroma";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12 mx-auto">
		<div class="card">
			<div class="card-header bg-info">
				<h2 class="text-white">Çalışan Ekle</h2>
			</div>
			<div class="row">
				<div class="col-md-12 mx-auto">
					<form method="post" enctype="multipart/form-data">
						<div class="card-body">
							<div asp-validation-summary="All">
							</div>
							<div class="form-group">
								<label asp-for="ID"></label>
								<select class="form-control" data-toggle="select2" aria-label="Default select example" asp-for="ID">
									@if(ViewBag.AppUserList != null)
									{
									@foreach (var appUser in ViewBag.AppUserList)
									{
										<option value="@appUser.ID">@appUser.UserName</option>
									}
									}
								</select>
							</div>
							<div class="form-group">
								<label asp-for="BranchID"></label>
								<select class="form-control" data-toggle="select2" aria-label="Default select example" asp-for="BranchID">
									@if(ViewBag.BranchList != null)
									{
									@foreach (var branch in ViewBag.BranchList)
									{
										<option value="@branch.ID">@branch.BranchName</option>
									}
									}
								</select>
							</div>
							<div class="form-group">
								<label asp-for="DepartmentID"></label>
								<select class="form-control" data-toggle="select2" aria-label="Default select example" asp-for="DepartmentID">
									@if(ViewBag.DepartmentList != null)
									{
									@foreach (var department in ViewBag.DepartmentList)
									{
										<option value="@department.ID">@department.DepartmentName</option>
									}
									}
								</select>
							</div>
							<div class="form-group">
								<label asp-for="Salary"></label>
								<input type="text" class="form-control" asp-for="Salary" />
							</div>
						</div>
						<div class="card-footer">
							<button type="submit" class="btn btn-success btn-block waves-effect waves-light">Ekle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

