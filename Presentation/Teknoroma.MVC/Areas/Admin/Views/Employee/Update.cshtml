@using Teknoroma.Application.Features.Employees.Models
@model UpdateEmployeeViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row mx-4">
	<div class="col-md-12 mx-auto">
		<div class="card card-primary">
			<div class="card-header">
				<h3 class="card-title">Çalışan Ekle</h3>
			</div>
			<div class="row">
				<div class="col-md-8 mx-auto">
					<form method="post" enctype="multipart/form-data">
						<div class="card-body">
							<div asp-validation-summary="All">
							</div>
							<div class="form-group">
								<label asp-for="ID"></label>
								<select class="form-control" aria-label="Default select example" asp-for="@Model.ID">
									if@(ViewBag.AppUserList != null)
									{
									@foreach (var appUser in ViewBag.AppUserList)
									{
										<option value="@appUser.ID">@appUser.UserName</option>
									}
									}
								</select>
							</div>
							<div class="form-group">
								<label asp-for="BranchID"></label>
								<select class="form-control" aria-label="Default select example" asp-for="@Model.BranchID">
									@if(ViewBag.BranchList != null)
									{
									@foreach (var branch in ViewBag.BranchList)
									{
										<option value="@branch.ID">@branch.BranchName</option>
									}
									}
								</select>
							</div>
							<div class="form-group">
								<label asp-for="DepartmentID"></label>
								<select class="form-control" aria-label="Default select example" asp-for="@Model.DepartmentID">
									@if(ViewBag.DepartmentList != null)
									{
									@foreach (var department in ViewBag.DepartmentList)
									{
										<option value="@department.ID">@department.DepartmentName</option>
									}
									}
								</select>
							</div>
						</div>
						<div class="card-footer">
							<button type="submit" class="btn btn-block bg-gradient-warning">Güncelle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


