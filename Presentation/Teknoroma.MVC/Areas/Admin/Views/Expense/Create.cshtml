@using Teknoroma.Application.Features.Expenses.Models
@model CreateExpenseViewModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header bg-info">
				<h3 style="color:white;">Gider Oluştur</h3>
			</div>
			<div class="card-body">
				<div asp-validation-summary="All">
				</div>
				<form method="post">
					<div class="form-group">
						<label asp-for="Title"></label>
						<input id="title" type="text" class="form-control" asp-for="Title" />
					</div>
					<div class="form-group">
						<label asp-for="Price"></label>
						<input type="number" class="form-control" asp-for="Price" />
					</div>
					<div class="form-group">
						<label asp-for="Description"></label>
						<textarea class="form-control" asp-for="Description"></textarea>
					</div>
					<div class="form-group">
						<label asp-for="ExpenseDate"></label>
						<input class="form-control" type="datetime-local" id="datetimepicker" asp-for="ExpenseDate" />
					</div>
					<div>
						<button type="submit" class="btn btn-success btn-block waves-effect waves-light">Ekle</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
