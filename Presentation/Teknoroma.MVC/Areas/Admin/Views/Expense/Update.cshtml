@using Teknoroma.Application.Features.Expenses.Models
@model ExpenseViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header bg-info">
				<h3 style="color:white;">Gider Güncelle</h3>
			</div>
			<div class="card-body">
				<div asp-validation-summary="All">
				</div>
				@if(Model != null)
				{
					<form method="post" asp-route-ID="@Model.ID">
						<div class="form-group">
							<label asp-for="Title"></label>
							<input type="text" class="form-control" asp-for="@Model.Title" />
						</div>
						<div class="form-group">
							<label asp-for="Price"></label>
							<input type="number" class="form-control" asp-for="@Model.Price" />
						</div>
						<div class="form-group">
							<label asp-for="Description"></label>
							<textarea class="form-control" asp-for="@Model.Description"></textarea>
						</div>
						<div class="form-group">
							<label asp-for="ExpenseDate"></label>
							<input class="form-control" type="datetime-local" id="datetimepicker" asp-for="@Model.ExpenseDate" />
						</div>
						<div>
							<button type="submit" class="btn btn-warning btn-block waves-effect waves-light">Ekle</button>
						</div>
					</form>
				}
			</div>
		</div>
	</div>
</div>