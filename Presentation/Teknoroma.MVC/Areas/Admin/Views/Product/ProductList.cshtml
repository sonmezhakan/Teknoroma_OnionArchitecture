@using Teknoroma.Application.Features.Products.Models

@model List<ProductListViewModel>
@{
	ViewData["Title"] = "ProductList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-12">
		<div class="card card-primary">
			<div class="card-header">
				<h1>Ürün Listesi</h1>
			</div>
			<div class="card-body">
				<div class="col-sm-12">
					<table class="table table-striped table-bordered">
						<thead>
						<th rowspan="1" colspan="1">Resim</th>
						<th rowspan="1" colspan="1">Ürün Adı</th>
						<th rowspan="1" colspan="1">Marka Adı</th>
						<th rowspan="1" colspan="1">Kategori Adı</th>
						<th rowspan="1" colspan="1">Fiyat</th>
						<th rowspan="1" colspan="1">Stok Miktarı</th>
						<th rowspan="1" colspan="1">Kritik Stok Miktarı</th>
						<th rowspan="1" colspan="1">Açıklama</th>
						<th>

						</th>
						</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="~/images/product/@item.ImagePath" width="125" height="100" />
									</td>
									<td>
										@item.ProductName
									</td>
									<td>
										@item.BrandName
									</td>
									<td>
										@item.CategoryName
									</td>
									<td>
										@item.UnitPrice
									</td>
									<td>
										@item.UnitsInStock
									</td>
									@if (item.CriticalStock > item.UnitsInStock)
									{
										<td style="background-color:indianred">
											@item.CriticalStock
										</td>
									}
									else
									{
										<td>
											@item.CriticalStock
										</td>
									}
									<td>
										@item.Description
									</td>
									<td>
										<a class="btn bg-gradient-info" asp-controller="Product" asp-action="Detail" asp-route-id="@item.ID">Detaylar</a>
										<a class="btn bg-gradient-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.ID">Güncelle</a>
										<a class="btn bg-gradient-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div><div class="row">
				<div class="col-sm-12 col-md-5">
					<div>
						@if (Model != null)
						{
							@Model.Count()
						}
						else
						{
							<a>0</a>
						}
						adet ürün bulunmaktadır.
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


