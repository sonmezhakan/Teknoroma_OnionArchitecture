@using Teknoroma.Application.Features.Suppliers.Models
@model List<SupplierViewModel>
@{
	ViewData["Title"] = "SupplierList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
	<div class="col-md-12 mx-auto">
		<div class="card">
			<div class="card-header bg-info">
				<h2 class="text-white">Tedarikçi Listesi</h2>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12">
						<table id="basic-datatable" class="table table-striped nowrap dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
							<thead>
							<th rowspan="1" colspan="1">Firma Adı</th>
							<th rowspan="1" colspan="1">İletişim Kurulacak Kişi</th>
							<th rowspan="1" colspan="1">İletişim Kurulacak Kişinin Departmanı</th>
							<th rowspan="1" colspan="1">Mail</th>
							<th rowspan="1" colspan="1">Telefon Numarası</th>
							<th rowspan="1" colspan="1">Adres</th>
							<th rowspan="1" colspan="1">Web Site</th>
							<th>

							</th>
							</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>
											@item.CompanyName
										</td>
										<td>
											@item.ContactName
										</td>
										<td>
											@item.ContactTitle
										</td>
										<td>
											@item.Email
										</td>
										<td>
											@item.PhoneNumber
										</td>
										<td>
											@item.Address
										</td>
										<td>
											@item.WebSite
										</td>
										<td>
											<div>
												<a class="btn btn-info btn-block waves-effect waves-light" asp-controller="Supplier" asp-action="Detail" asp-route-id="@item.ID">Detaylar</a>
											</div>
											<div>
												<a class="btn btn-warning btn-block waves-effect waves-light" asp-controller="Supplier" asp-action="Update" asp-route-id="@item.ID">Güncelle</a>
											</div>
											<div>
												<a class="btn btn-danger btn-block waves-effect waves-light" asp-controller="Supplier" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
											</div>
											</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div><div class="row">
					<div class="col-sm-12 col-md-5">
						<div>
							@if (Model != null)
							{
								@Model.Count()
							}
							else
							{
								<a>0</a>
							}
							adet tedarikçi bulunmaktadır.
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
